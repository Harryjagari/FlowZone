<!-- AppShell.xaml -->
<Shell
    x:Class="FlowZone.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FlowZone"
    xmlns:views="clr-namespace:FlowZone.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:Login}"
        Route="Login"
        FlyoutItemIsVisible="False"
        Shell.FlyoutBehavior="Disabled"/>

    <FlyoutItem Title="MainPage" FlyoutDisplayOptions="AsMultipleItems" Route="MainPage">
        <ShellContent Title="Home" ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage"/>
        <ShellContent Title="About" ContentTemplate="{DataTemplate views:GetStarted}" Route="GetStarted"/>
        <ShellContent Title="Contact" ContentTemplate="{DataTemplate views:Login}" Route="Login"/>
    </FlyoutItem>

    <!-- Add other FlyoutItems and ShellContents as needed -->

    <Shell.FlyoutFooter>
        <StackLayout Padding="20">
            <Label Text="Sign Out" TextColor="Blue" Margin="0,0,5,0" FontAttributes="Bold">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSignOutTapped" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </Shell.FlyoutFooter>
</Shell>
