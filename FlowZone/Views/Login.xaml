<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlowZone.Views.Login"
             Title="Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
            <Label Text="Login" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20"/>
            <Entry Placeholder="Username" x:Name="UsernameEntry" Margin="0,0,0,10"/>
            <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" Margin="0,0,0,10"/>
            <Button Text="Login" Clicked="OnLoginButtonClicked" HorizontalOptions="FillAndExpand"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="Don't have an account? " />
                <Label Text="Sign up" TextColor="Blue" Margin="0,0,5,0" FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSignUpTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
            <Label Text="Forgot password?" TextColor="Blue" Margin="0,10,0,0" HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnForgotPasswordTapped" />
                </Label.GestureRecognizers>
            </Label>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>