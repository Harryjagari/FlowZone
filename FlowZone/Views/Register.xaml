<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlowZone.Views.Register"
             Title="Register">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
            <Label Text="Register" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20"/>
            <Entry Placeholder="Username" x:Name="UsernameEntry" Margin="0,0,0,10"/>
            <Entry Placeholder="Email" Keyboard="Email" x:Name="EmailEntry" Margin="0,0,0,10"/>
            <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" Margin="0,0,0,10"/>
            <Entry Placeholder="Confirm Password" IsPassword="True" x:Name="ConfirmPasswordEntry" Margin="0,0,0,10"/>
            <Button Text="Register" Clicked="OnRegisterButtonClicked" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>